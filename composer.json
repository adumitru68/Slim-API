{
    "name": "Slim-SPI",
    "description": "Lightweight API built on Slim Framework",
    "keywords": ["api", "php", "slim"],
    "homepage": "https://github.com/alexberce/Slim-API",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandru Berce",
            "email": "alex@invobox.com",
            "homepage": "https://github.com/alexberce"
        }
    ],
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "juliangut/slim-php-di": "^1.2",
        "tuupola/slim-jwt-auth": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Invobox\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 <= 6.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public/ public/index.php",
        "test": "phpunit"
	}
}
